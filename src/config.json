{
  "groups": ["foo", "bar", "baz"],
  "inputs": [
    {
      "name": "checkbox",
      "type": "checkbox",
      "label": "Simple checkbox",
      "group": "foo"
    },
    {
      "name": "hidden",
      "type": "text",
      "label": "Peekaboo!",
      "showIf": {
        "name": "checkbox",
        "value": true
      },
      "placeholder": "I'm hidden",
      "group": "foo"
    },
    {
      "name": "number",
      "type": "number",
      "label": "Simple number",
      "defaultValue": 5,
      "min": 0,
      "max": 10,
      "group": "bar"
    },
    {
      "name": "text",
      "type": "text",
      "label": "Simple text",
      "pattern": "^[a-zA-Z]*$",
      "group": "baz"
    },
    {
      "name": "select",
      "type": "select",
      "label": "Simple select",
      "options": ["foo", "bar"],
      "placeholder": "Select one",
      "group": "bar"
    },
    {
      "name": "radio",
      "type": "radio",
      "label": "Simple radio",
      "options": ["foo", "bar"],
      "defaultValue": "bar",
      "group": "bar"
    }
  ]
}
